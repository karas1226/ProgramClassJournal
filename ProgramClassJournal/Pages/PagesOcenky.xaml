<Page x:Class="ProgramClassJournal.Pages.PagesOcenky"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramClassJournal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagesOcenky">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="196*"/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dataGridOcenky" AutoGenerateColumns="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="фио ученика" Binding="{Binding StudentName}" />
                    <DataGridTextColumn Header="Предмет" Binding="{Binding PredmetName}" />
                    <DataGridTextColumn Header="Дата" Binding="{Binding DateOcenk, StringFormat=dd.MM.yyyy HH:mm}" />
                    <DataGridTextColumn Header="Оценка" Binding="{Binding Ocenka }" />
                    <DataGridTextColumn Header="Преподаватель" Binding="{Binding TeacherName }" />

                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="20" Grid.Row="1" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="95,0,0,0" VerticalAlignment="Center" Height="21" Grid.Row="1" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="217,0,0,0" VerticalAlignment="Center" Height="21" Grid.Row="1" Click="btnDelete_Click"/>
            <Button x:Name="btnImport" Content="Импортировать" HorizontalAlignment="Left" Height="26" Margin="598,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="96" Click="btnImport_Click"/>
            <Button x:Name="btnExport" Content="Экспортировать" HorizontalAlignment="Left" Margin="703,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="94" Click="btnExport_Click"/>
        </Grid>
    </Grid>
</Page>
