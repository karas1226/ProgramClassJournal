<Page x:Class="ProgramClassJournal.Pages.PagesPredmety"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramClassJournal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagesPredmety">

    <Grid>
        <Grid>
            <DataGrid x:Name="dataGridCars" AutoGenerateColumns="False" Margin="0,0,0,55">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Название предмета" Binding="{Binding Number}" />
                    <DataGridTextColumn Header="ФИО преподавателя" Binding="{Binding EntryTime, StringFormat=dd.MM.yyyy HH:mm}" />
                    <DataGridTextColumn Header="Дата проведения" Binding="{Binding ExitTime, StringFormat=dd.MM.yyyy HH:mm}" />
                    
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,420,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="95,420,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="217,420,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
