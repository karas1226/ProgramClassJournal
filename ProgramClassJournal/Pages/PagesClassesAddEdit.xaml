<Page x:Class="ProgramClassJournal.Pages.PagesClassesAddEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramClassJournal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagesClassesAddEdit">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Классы" FontSize="30" HorizontalAlignment="Center"/>
            <Label Content="Класс"/>
            <TextBox x:Name="tbNumber"/>
            <Label Content="Параллель"/>
            <TextBox x:Name="tbParallel"/>
            <Label Content="Классный руководитель"/>
            <TextBox x:Name="tbTeacher"/>
  
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click"/>
            <Button x:Name="btnBack" Content="Назад" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
