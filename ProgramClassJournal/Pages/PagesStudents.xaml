<Page x:Class="ProgramClassJournal.Pages.PagesStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramClassJournal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagesStudents">

    <Grid>
        <Grid>
            <DataGrid x:Name="dataStudents" AutoGenerateColumns="False" Margin="0,0,0,55">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="ФИО ученика" Binding="{Binding FioStudent}" />
                    <DataGridTextColumn Header="Дата рождения" Binding="{Binding DateOfBirth, StringFormat=dd.MM.yyyy HH:mm}" />
                    <DataGridTextColumn Header="Параллель" Binding="{Binding Parallell}" />
                    <DataGridTextColumn Header="Класс" Binding="{Binding NumberClass}" />
                    
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,420,0,0" VerticalAlignment="Top" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="95,420,0,0" VerticalAlignment="Top" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="217,420,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>
        </Grid>
    </Grid>
</Page>
