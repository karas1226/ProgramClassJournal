<Page x:Class="ProgramClassJournal.Pages.PagesClasses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramClassJournal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagesClasses">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="196*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataClasses"/>
        <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Click="btnAdd_Click" Height="20" Width="57" Grid.Row="1"/>
        <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="95,22,0,10" Click="btnEdit_Click" Width="105" Grid.Row="1"/>
        <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="249,23,0,0" VerticalAlignment="Top" Height="20" Width="48" Grid.Row="1"/>
    </Grid>
</Page>
