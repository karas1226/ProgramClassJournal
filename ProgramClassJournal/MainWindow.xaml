<Window x:Class="ProgramClassJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramClassJournal"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193*"/>
            <ColumnDefinition Width="607*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" Background="Gray">
            <TextBlock Text="Журнал" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White"/>
            <Button x:Name="btnStudents" Content="Ученики" Margin="0,10,0,10" Click="btnStudents_Click"/>
            <Button x:Name="btnTeacher" Content="Учителя"  Margin="0,10,0,10" Click="btnTeacher_Click"/>
            <Button x:Name="btnPredmety" Content="Предметы"  Margin="0,10,0,10" Click="btnPredmety_Click"/>
            <Button x:Name="btnOcenky" Content="Оценки"  Margin="0,10,0,10" Click="btnOcenky_Click"/>
            <Button x:Name="btnClasess" Content="Классы"  Margin="0,10,0,10" Click="btnClasess_Click"/>
            <Button x:Name="btnClose" Content="Закрыть" Background="Black" Foreground="White" Margin="0,10,0,10"/>
        </StackPanel>

        <Frame x:Name="mainFrame" Background="LightGray" Grid.Column="1"/>
    </Grid>
</Window>
